<%= form_for(@block) do |f| %>
  <% if @block.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@block.errors.count, "error") %> prohibited this block from being saved:</h2>

      <ul>
      <% @block.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :block_number, "Please enter your six-digit bee block number:" %>
    <%= f.text_field :block_number %>
  </div>

  <div class="field">
    <%= f.label :nickname, "To make it easier to keep track of your bee block, add a nickname for your block here:" %>
    <%= f.text_field :nickname%>
  </div> <br/>

  <div class="actions">
    <%= f.submit "Register Block", class:"btn btn-large btn-primary" %>
  </div>
<% end %>
