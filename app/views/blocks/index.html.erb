
<% if current_user.admin? %>
    <h1>Admin Bee Blocks List - (<%=(@blocks.count)%>) </h1>
      <table class = "table table-striped table-hover">
        <thead>
        <tr>
          <th>Block Number</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Block Nickname</th>
          <th>Edit Block</th>
          <th>Delete Block</th>
        </tr>
        </thead>
        
        <tbody>
        <% @blocks.each do |block| %>
            <tr>
              <td><%= block.block_number %></td>
              <td><%= block.user.first_name %></td>
              <td><%= block.user.last_name %></td>
              <td><%= block.user.email %></td>
              <td><%= block.nickname %></td>
              <td><%= link_to 'Edit ', edit_block_path(block) %></td>
              <td><%= link_to 'Delete', block, method: :delete, data: { confirm: 'Do you wish to delete this block?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>
      <div class="btn-group btn-group-justified">
        
          <%= link_to 'Register a Bee Block', new_block_path, method: :get, class: "btn btn-large btn-primary" %>
        
          <%= link_to 'Report Activity', reports_path, class: "btn btn-large btn-primary" %>
        
        
          <%= link_to 'Export as CSV', blocks_path(format: "csv") , class: "btn btn-large btn-primary"%>
        
          <%= link_to 'Export to Excel', blocks_path(format: "xls") , class: "btn btn-large btn-primary"%>
        
      </div>


      <br>

<% else %>

<h1>Your Bee Blocks - (<%=(@blocks.count)%>) </h1>


<div class = "center hero-unit">
<table class = "table table-striped table-hover">
  <thead>
    <tr>
      <th>Block Number</th>
      <th>Block Nickname</th>
      <th>Edit Block</th>
      <th>Delete Block</th>
    </tr>
  </thead>



  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <td><%= block.block_number %></td>
        <td><%= block.nickname %></td>
        
        <td><%= link_to 'Edit ', edit_block_path(block) %></td>
        <td><%= link_to 'Delete', block, method: :delete, data: { confirm: 'Do you wish to delete this block?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <div class="btn-group btn-group-justified">
    <div class="btn-group">
      <%= button_to 'Register a Bee Block', new_block_path, method: :get, class: "btn btn-large btn-primary" %>
    </div>
    <div class="btn-group">
      <%= button_to 'Report Activity', reports_path, class: "btn btn-large btn-primary" %>
    </div>
  </div>


<br>

</div>
<% end %>